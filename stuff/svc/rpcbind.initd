depend() {
	use net
	before inetd xinetd
	provide portmap
}

start() {
	ebegin "Starting rpcbind"
	start-stop-daemon --start --quiet --exec /usr/bin/rpcbind -- ${RPCBIND_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping rpcbind"
	start-stop-daemon --stop --quiet --exec /usr/bin/rpcbind
	eend $?
}
