name=host-python
version=3.8.1
release=1
options=('bootstrap')
source=("https://www.python.org/ftp/python/${version%rc*}/Python-${version}.tar.xz")

build() {
	cd "$SRC"/Python-$version
	./configure \
		--prefix="$TOOLS" \
		--without-ensurepip
	make
	make install

	ln -sf python3 "$TOOLS"/bin/python
}
