name=bc
version=2.0.3
release=1
source=("https://github.com/gavinhoward/bc/releases/download/$version/$name-$version.tar.xz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/$name-$version
	./configure.sh
	make PREFIX="$TOOLS"
	make PREFIX="$TOOLS" install

	mkdir -p "$PKG"/var/lib/db
	touch "$PKG"/var/lib/db/installed_${name}
}
