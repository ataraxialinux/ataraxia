# Maintainer: nee-san <nagakamira@gmail.com>

pkgname=gnupg
pkgver=2.2.12
pkgrel=1
pkgdesc="Complete and free implementation of the OpenPGP standard"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="https://www.gnupg.org/"
license=('GPL')
depends=('musl' 'sqlite' 'bzip2' 'libassuan' 'libgcrypt' 'libgpg-error' 'libksba' 'npth' 'pinentry')
source=("https://gnupg.org/ftp/gcrypt/$pkgname/$pkgname-$pkgver.tar.bz2")
md5sums=('421b17028878b253c5acfef056bc6141')

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--prefix='' \
		--libexecdir=/lib/gnupg \
		--sbindir=/bin \
		--sysconfdir=/etc \
		--enable-symcryptrun \
		--disable-all-tests \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
}
