# Description: Libsigc++ implements a full callback system for use in widget libraries
# URL:         http://libsigc.sourceforge.net/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  perl-xml-parser
# Section:     libs

name=libsigc++2
version=2.10.2
release=1
options=('~emptydirs')
source=("http://ftp.gnome.org/pub/gnome/sources/libsigc++/${version%.*}/libsigc++-$version.tar.xz")

build() {
	cd "$SRC"/libsigc++-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--disable-documentation
	make
	make DESTDIR="$PKG" install
}
