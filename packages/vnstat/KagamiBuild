# Description: A console-based network traffic monitor
# URL:         https://humdi.net/vnstat/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  sqlite
# Section:     net

name=vnstat
version=2.6
release=2
backup=('etc/vnstat.conf')
source=("https://humdi.net/vnstat/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/vnstat/vnstat-2.2-conf.patch
	patch -Np1 -i "$STUFF"/vnstat/vnstat-2.2-run.patch

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--sysconfdir=/etc
	make

	mkdir -p "$PKG"/usr/bin
	make DESTDIR="$PKG" install

	install -Dm755 "$STUFF"/svc/vnstatd "$PKG"/etc/service/vnstatd/run
}
