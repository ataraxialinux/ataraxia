# Description: The GNU Debugger
# URL:         http://www.gnu.org/software/gdb/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  zlib ncurses readline expat python
# Section:     devel

name=gdb
version=8.3
release=1
backup=('etc/gdb/gdbinit')
source=("http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version

	case "$BARCH" in
		ppc64le|ppc64)	MYCXX="--enable-build-with-cxx=no"	;;
	esac

	./configure $BUILDFLAGS $MYCXX \
		--prefix=/usr \
		--with-system-gdbinit=/etc/gdb/gdbinit \
		--with-system-readline \
		--with-python=/usr/bin/python3 \
		--enable-plugins \
		--disable-nls \
		--disable-rpath \
		--disable-werror
	make MAKEINFO="true" 
	make MAKEINFO="true" -C gdb/data-directory DESTDIR="$PKG" install
	make MAKEINFO="true" -C gdb DESTDIR="$PKG" install

	install -dm755 "$PKG"/etc/gdb
	touch "$PKG"/etc/gdb/gdbinit
}
