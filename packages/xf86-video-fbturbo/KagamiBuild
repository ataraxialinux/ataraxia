# Description: X.org DDX video driver
# URL:         https://xorg.freedesktop.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  xorg-server
# Section:     x11

name=xf86-video-fbturbo
version=0.4.0
commit=f9a6ed78419f0b98cf2c3ce3cdd4c97fe9a46195
release=1
source=("https://github.com/ssvb/xf86-video-fbturbo/archive/$commit.zip")

build() {
	export CFLAGS=${CFLAGS/,-z,now}
	export LDFLAGS="-Wl,-z,lazy"

	cd "$SRC"/$name-$commit
	patch -Np0 -i "$STUFF"/xf86-video-fbturbo/gcc8.patch
	./autogen.sh

	./configure $BUILDFLAGS \
		--prefix=/usr
	make
	make DESTDIR="$PKG" install
}
