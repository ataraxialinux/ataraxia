# Maintainer: nee-san <nagakamira@gmail.com>

pkgname=aspell-ru
pkgver=0.99f7
pkgrel=1
pkgdesc="Russian dictionary for aspell"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="http://aspell.net/"
license=('custom')
depends=('aspell')
source=("ftp://ftp.gnu.org/gnu/aspell/dict/ru/aspell6-ru-$pkgver-1.tar.bz2")
md5sums=('c4c98eaa5e77ad3adccbc5c96cb57cb3')

build() {
	cd "$srcdir"/aspell6-ru-$pkgver-1
	./configure
	make
}

package() {
	cd "$srcdir"/aspell6-ru-$pkgver-1
	make DESTDIR="$pkgdir" install
}
