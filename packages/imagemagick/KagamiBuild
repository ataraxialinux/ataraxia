# Description: An image viewing/manipulation program
# URL:         https://www.imagemagick.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  perl libltdl fontconfig libxext libxml2 lcms2 ghostscript libraw tiff openjpeg pango libwebp
# Dep x86_64:       librsvg
# Dep i686:         librsvg
# Dep aarch64:      librsvg
# Dep armv7hnl:     librsvg-c
# Dep armv6l:       librsvg-c
# Dep powerpc64le:  librsvg
# Dep powerpc64:    librsvg
# Dep powerpc:      librsvg
# Dep s390x:        librsvg-c
# Dep riscv64:      librsvg-c
# Dep riscv32:      librsvg-c
# Section:     graphics

name=imagemagick
version=7.0.10+23
release=1
options=('libtool')
source=("https://www.imagemagick.org/download/releases/ImageMagick-${version/+/-}.tar.xz")

build() {
	cd "$SRC"/ImageMagick-${version/+/-}
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-gs-font-dir=/usr/share/fonts/gsfonts \
		--with-gslib \
		--with-jpeg \
		--with-lcms \
		--with-modules \
		--with-pango \
		--with-perl \
		--with-perl-options=INSTALLDIRS=vendor \
		--with-png \
		--with-rsvg \
		--with-tiff \
		--with-webp \
		--enable-hdri \
		--enable-shared

	sed -i 's/ -shared / -Wl,--as-needed\0/g' libtool
	make
	make DESTDIR="$PKG" install

	cd PerlMagick
	find . -name '*.so' -delete
	sed -i 's,LD_RUN_PATH="$(LD_RUN_PATH)" ,,' quantum/Makefile
	make DESTDIR="$PKG" install

	rm -rf "$PKG"/usr/lib/*.la
}
