# Description: A highly capable, feature-rich programming language
# URL:         http://www.perl.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  gdbm db53
# Section:     interpreters

name=perl
version=5.32.1
crossver=be0a368b16054feee517b4b104e93d2d6eb1bf6e
release=2
source=("https://www.cpan.org/src/5.0/$name-$version.tar.xz"
	"https://github.com/arsv/perl-cross/archive/$crossver.tar.gz")

build() {
	filter-flags -flto -fdata-sections -ffunction-sections

	cd "$SRC"
	cp -f -r perl-cross-$crossver/* $name-$version/

	cd "$SRC"/$name-$version
	./configure $PERLFLAGS \
		--prefix=/usr \
		-Dprivlib=/usr/share/perl5/core_perl \
		-Darchlib=/usr/lib/perl5/core_perl \
		-Dvendorprefix=/usr \
		-Dvendorlib=/usr/share/perl5/vendor_perl \
		-Dvendorarch=/usr/lib/perl5/vendor_perl \
		-Dsiteprefix=/usr/local \
		-Dsitelib=/usr/share/perl5/site_perl \
		-Dsitearch=/usr/lib/perl5/site_perl \
		-Dman1dir=/usr/share/man/man1 \
		-Dman3dir=/usr/share/man/man3 \
		-Dpager="/usr/bin/less -isR" \
		-Accflags=-D_GNU_SOURCE \
		-Dcf_by='Ataraxia Linux' \
		-Dcccdlflags='-fPIC' \
		-Dcccdlflags='-fPIC' \
		-Dccdlflags='-rdynamic' \
		-Doptimize="$CFLAGS" \
		-Duseshrplib \
		-Dusethreads
	make
	make DESTDIR="$PKG" install
}
