# Description: USB Multiplex Daemon
# URL:         https://marcansoft.com/blog/iphonelinux/usbmuxd/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  libplist libusb
# Section:     libs

name=libusbmuxd
version=2.0.2
release=1
source=("https://github.com/libimobiledevice/libusbmuxd/archive/$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	patch -Np0 -i "$STUFF"/libusbmuxd/musl.patch

	NOCONFIGURE=1 \
	./autogen.sh
	./configure $BUILDFLAGS \
		--prefix=/usr
	make
	make DESTDIR="$PKG" install
}
