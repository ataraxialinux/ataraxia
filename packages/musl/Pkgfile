# Description: The standard C library
# URL:         http://www.musl-libc.org/
# Maintainer:  nee-san, nagakamira at gmail dot com

name=musl
version=1.1.21
release=1
source=("http://www.musl-libc.org/releases/$name-$version.tar.gz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$KEEP"/musl/musl-riscv.patch

	${CROSS_COMPILE}cc $CFLAGS -c "$KEEP"/musl/__stack_chk_fail_local.c -o __stack_chk_fail_local.o
	${CROSS_COMPILE}ar r libssp_nonshared.a __stack_chk_fail_local.o

	./configure $TOOLFLAGS \
		--prefix='' \
		--libdir=/lib \
		--syslibdir=/lib \
		--enable-optimize=size
	make
	make DESTDIR="$PKG" install

	cp libssp_nonshared.a "$PKG"/lib

	mkdir -p "$PKG"/bin
	ln -sf ../lib/libc.so "$PKG"/bin/ldd
}
