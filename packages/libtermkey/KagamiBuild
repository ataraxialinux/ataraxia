name=libtermkey
version=0.22
release=2
source=("http://www.leonerd.org.uk/code/$name/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	make PREFIX=/usr
	make PREFIX=/usr DESTDIR="$PKG" install
}
