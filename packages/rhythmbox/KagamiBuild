# Description: Music playback and management application
# URL:         https://wiki.gnome.org/Apps/Rhythmbox
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  meson gobject-introspection vala intltool yelp-xsl pygobject grilo gst-plugins-base gst-plugins-good gst-plugins-bad gst-plugins-ugly gst-libav json-glib libgudev libmtp libnotify libpeas libsoup tdb totem-pl-parser
# Section:     gnome

name=rhythmbox
version=3.4.4
release=1
source=("http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib/rhythmbox \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--without-hal \
		--enable-python \
		--enable-vala \
		--disable-browser-plugin \
		--disable-gtk-doc \
		--disable-more-warnings \
		--disable-schemas-compile \

	sed -i 's/ -shared / -Wl,--as-needed\0/g' libtool
	make
	make DESTDIR="$PKG" install
}
