# Maintainer: nee-san <nagakamira@gmail.com>

pkgname=mawk
pkgver=1.3.4_20171017
pkgrel=1
pkgdesc="An interpreter for the AWK Programming Language"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="http://invisible-island.net/mawk/"
license=('GPL-2')
depends=('musl')
source=("ftp://ftp.invisible-island.net/$pkgname/$pkgname-${pkgver/_/-}.tgz")
md5sums=('6de7560406cd9836335a7297bb910e08')

build() {
	cd "$srcdir"/$pkgname-${pkgver/_/-}
	./configure \
		--prefix='' \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-${pkgver/_/-}
	make DESTDIR="$pkgdir" install

	ln -sf mawk "$pkgdir"/bin/awk
}
