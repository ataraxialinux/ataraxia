# Description: User Interface Builder for GTK+ applications
# URL:         https://glade.gnome.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  intltool itstool pygobject webkitgtk libxml2
# Section:     gnome

name=glade
version=3.22.1
release=1
source=("http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	printf "all:\n\ttrue\n\ninstall:\n\ttrue\n\n" > help/Makefile.in

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-compile-warnings=no \
		--enable-gladeui \
		--disable-gtk-doc \
		--disable-man-pages
	sed -i 's/ -shared / -Wl,-Os,--as-needed\0/g' libtool
	make
	make DESTDIR="$PKG" install
}
