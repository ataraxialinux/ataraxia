# Description: Free implementation of the Remote Desktop Protocol
# URL:         http://www.freerdp.com/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  cmake samurai alsa-utils systemd libusb dbus-glib libx11 libxcursor libxdamage libxext libxfixes libxi libxrender libxinerama libxv libxrandr libxtst libxkbcommon libxkbfile ffmpeg gst-plugins-base libjpeg-turbo krb5 openh264
# Section:     libs

name=freerdp
version=2.2.0
release=5
source=("https://github.com/FreeRDP/FreeRDP/archive/${version/r/-r}.tar.gz::archive=$name-${version/r/-r}.tar.gz")

build() {
	case $BARCH in
		amd64|x86)
			archconf="-DWITH_SSE2=ON"
			;;
		armv7l)
			archconf="-DARM_FP_ABI=hard"
			;;
	esac

	case $BARCH in
		armv7l)
			archconf="$archconf -DWITH_NEON=ON"
			;;
	esac

	cd "$SRC"/FreeRDP-${version/r/-r}
	mkdir -p build
	cd build
	cmake "$SRC"/FreeRDP-${version/r/-r} \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		$archconf -DWITH_ALSA=ON \
		-DWITH_CLIENT=ON \
		-DWITH_CUPS=OFF \
		-DWITH_DEBUG_ALL=OFF \
		-DWITH_MANPAGES=OFF \
		-DWITH_FFMPEG=ON \
		-DWITH_SWSCALE=ON \
		-DWITH_DSP_FFMPEG=ON \
		-DWITH_GSTREAMER_1_0=ON \
		-DWITH_JPEG=ON \
		-DWITH_OPENH264=ON \
		-DWITH_PULSE=ON \
		-DWITH_SERVER=ON \
		-DWITH_PCSC=OFF \
		-DWITH_LIBSYSTEMD=ON \
		-DWITH_X11=ON \
		-DWITH_XINERAMA=ON \
		-DWITH_XV=ON \
		-DWITH_WAYLAND=ON \
		-Wno-dev -G Ninja
	samu
	DESTDIR="$PKG" samu install
}
