# Description: A small and lightweight implementation of the XDG Sound Theme Specification
# URL:         http://0pointer.de/lennart/projects/libcanberra
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  libvorbis alsa-lib gstreamer gtk3 libtool
# Section:     audio

name=libcanberra
version=0.30
release=2
options=('~emptydirs')
source=("http://0pointer.de/lennart/projects/$name/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	for a in $(find . -name config.sub); do
		cp "$STUFF"/config.sub $a
	done

	for a in $(find . -name config.guess); do
		cp "$STUFF"/config.guess $a
	done

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--disable-oss \
		--disable-pulse

	sed -i 's/ -shared / -Wl,-Os,--as-needed\0/g' libtool
	make

	unset MAKEFLAGS
	make -j1 DESTDIR="$PKG" install
}
