# Description: A library that implements Perl 5-style regular expressions. 2nd version
# URL:         http://www.pcre.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  zlib readline bzip2
# License:     BSD

name=pcre2
version=10.33
release=1
source=("https://ftp.pcre.org/pub/pcre/$name-$version.tar.bz2")

build() {
	case "$BARCH" in
		riscv32|riscv64|s390x)	JIT="--disable-jit"	;;
		*)		JIT="--enable-jit"	;;
	esac

	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		$JIT \
		--enable-pcre2-16 \
		--enable-pcre2-32 \
		--enable-pcre2grep-libbz2 \
		--enable-pcre2grep-libz \
		--enable-pcre2test-libreadline
	make
	make DESTDIR="$PKG" install
}
