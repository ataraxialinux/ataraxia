# Maintainer: nee-san <nagakamira@gmail.com>

pkgname=dialog
pkgver=1.3_20181107
pkgrel=1
pkgdesc="A tool to display dialog boxes from shell scripts"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="https://invisible-island.net/dialog/"
license=('LGPL-2.1-only')
depends=('musl' 'ncurses' 'bash')
source=("https://invisible-mirror.net/archives/$pkgname/$pkgname-${pkgver/_/-}.tgz")
md5sums=('a3c00afe9d4a8685d2287c31bf986c50')

build() {
	cd "$srcdir"/$pkgname-${pkgver/_/-}
	./configure \
		--prefix='' \
		--with-ncursesw \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-${pkgver/_/-}
	make DESTDIR="$pkgdir" install
}
