# Description: Complete solution to record, convert and stream audio and video
# URL:         https://ffmpeg.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  alsa-lib aom bzip2 dav1d fdk-aac fontconfig fribidi giflib gmp gsm lame lcms2 libass libbluray libdrm libmodplug libogg libressl libsoxr libtheora libva libvdpau libvorbis libvpx libwebp libx11 libxcb libxext libxml2 libxv openjpeg opus sdl2 speex wavpack x264 x265 xvidcore xz yasm zlib
# Section:     video

name=ffmpeg
version=4.2.1
release=2
source=("http://ffmpeg.org/releases/$name-$version.tar.xz")

build() {
	unset BUILDFLAGS

	case $BARCH in
		i386|armhf|armel)
			export BUILDFLAGS="--disable-asm"
			;;
	esac

	cd "$SRC"/$name-$version
	sed -i 's/-lflite"/-lflite -lasound"/' configure

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--enable-avresample \
		--enable-fontconfig \
		--enable-gmp \
		--enable-gpl \
		--enable-libaom \
		--enable-libass \
		--enable-libbluray \
		--enable-libdav1d \
		--enable-libdrm \
		--enable-libfdk-aac \
		--enable-libfreetype \
		--enable-libfribidi \
		--enable-libgsm \
		--enable-libmodplug \
		--enable-libmp3lame \
		--enable-libopenjpeg \
		--enable-libopus \
		--enable-libsoxr \
		--enable-libspeex \
		--enable-libtheora \
		--enable-libvorbis \
		--enable-libvpx \
		--enable-libwavpack \
		--enable-libwebp \
		--enable-libx264 \
		--enable-libx265 \
		--enable-libxvid \
		--enable-libxcb \
		--enable-libxml2 \
		--enable-nonfree \
		--enable-openssl \
		--enable-shared \
		--enable-version3 \
		--disable-debug  \
		--disable-static
	make
	make DESTDIR="$PKG" install
}
